#ifndef RBT_H_
#define RBT_H_

namespace Algorithms {

enum class Color
{
	Red=1,
	Black=2
};

struct RBTNode
{
	RBTNode();
    RBTNode(const void*,Color);
    const void* value;
    Color color;
	RBTNode * p;
	RBTNode * left;
	RBTNode * right;
};

class RBT {
public:
	RBT(int (*)(const void*, const void*) );
    bool add(const void*);
	virtual ~RBT();
private:
	RBTNode * _root;
	int (*_cmp)(const void*, const void*);

	// find the predecessor
	RBTNode * find_pred(const void* val);
	// find the ancestor
	RBTNode * find_ancest(const void* val);
};

} /* namespace Algorithms */

#endif /* RBT_H_ */
