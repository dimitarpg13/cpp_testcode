double sqrt_sum(Vector& v)
{
	double sum = 0;
    for (int i=0; i!=v.size(); ++i)
    	sum+=sqrt(v[i]);

	return sum;
};

Complex operator + (Complex a, Complex b)
{
    return a += b;
};


Complex operator- (Complex a, Complex b)
{
    return a -= b;
};

Complex operator- (Complex a)
{
    return {-a.real(), -a.imag() };
};

Complex operator* (Complex a, Complex b)
{
   	return a*=b;
};

Complex  operator/ (Complex a, Complex b)
{
   	return a/=b;
};

