#ifndef RBT_H_
#define RBT_H_

namespace Algorithms {

enum class Color
{
	Red=1,
	Black=2
};

struct RBTNode
{
	RBTNode();

	void* value;
	Color color;
	RBTNode * p;
	RBTNode * left;
	RBTNode * right;
};

class RBT {
public:
	RBT(int (*)(const void*, const void*) );
    add(const void*);
	virtual ~RBT();
private:
	RBTNode * _root;
	RBTNode * _nil;  // sentinel node
	int (*_cmp)(const void*, const void*);
};

} /* namespace Algorithms */

#endif /* RBT_H_ */
