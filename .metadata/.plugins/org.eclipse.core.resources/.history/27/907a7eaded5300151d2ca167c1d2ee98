#ifndef PROBLEMPARSER_H_
#define PROBLEMPARSER_H_

#include <string>
#include <fstream>
#include <iostream>
#include <set>

using namespace std;

class ProblemParser
{
private:
	bool is_symbol(char c);
	bool is_separator(char c);
    set<char> * m_pSymbols;

public:
	ProblemParser(char sep, int symb_count, char symbols[]);
	bool parse(string inputFile);
	~ProblemParser() { delete m_pSymbols; };
};



#endif /* PROBLEMPARSER_H_ */
