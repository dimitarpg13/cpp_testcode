#include <iostream>
#include <limits.h>
using namespace std;
int main() {
	cout << "HackerRank tests" << endl; // prints HackerRank tests
	int N = 2500;
	int n;

	cin >> n;

	int v[n], i = 0;
    for (i=0; i<n; i++)
    {
        cin >> v[i] ;
    }

    int maxDiff = -1,
        minDiff = INT_MAX,
        curDiff = -1,
        gap = -1;

    for (i = 0; i < n-1; i++)
    {
       curDiff = v[i+1] - v[i];
       if (curDiff > maxDiff)
       {
    	   maxDiff = curDiff;
    	   gap = v[i];
       }

       if (curDiff < minDiff)
       {
    	   minDiff = curDiff;
       }
    }



    int missingTerm = gap + maxDiff / minDiff;




	cout << missingTerm;

	return 0;
}
