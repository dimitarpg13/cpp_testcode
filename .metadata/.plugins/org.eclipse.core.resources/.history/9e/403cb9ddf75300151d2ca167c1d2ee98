#ifndef PROBLEMPARSER_H_
#define PROBLEMPARSER_H_

#include <string>
#include <fstream>
#include <iostream>
#include <set>

using namespace std;

namespace sudoku
{

class Parser
{
private:
	bool is_symbol(char c);
	bool is_separator(char c);
    set<char> * m_pSymbols;
    char m_cSep;

public:
	Parser(char sep, int symb_count, char symbols[]);
	bool parse(string inputFile);
	~Parser() { delete m_pSymbols; };
};

}

#endif /* PROBLEMPARSER_H_ */
