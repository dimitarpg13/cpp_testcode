#include <iostream>
using namespace std;

template < unsigned n >
struct factorial
{
	static const unsigned value = n * factorial<n-1>::value;
};

template<>
struct factorial<0>
{
	static const unsigned value = 1;
};

int main() {
	cout << "Boost : Template Metaprogramming Part 1" << endl; // prints Boost : Template Metaprogramming Part 1
	return 0;
}
