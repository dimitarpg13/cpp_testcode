void printf1(const char * s)
{
	while (*s)
	{
		if (*s == '%')
		{
			if (*(s + 1) == '%') {
				++s;
			}
			else
			{
				throw std::runtime_error("invalid format string: missing arguments!");
			}
		}
		cout << *s++;
	}
}

/*template<typename T, typename... Args>
void printf(const char *s, T value, Args... args)
{
	while (*s)
	{
