#include <iostream>
#include <thread>

using namespace std;

void func()
{

}

int main() {

	cout << "Starting the thread...";
	thread t(func);
	t.join();
	cout << "Ending the thread" << endl; // prints !!!Hello World!!!
	return 0;
}
