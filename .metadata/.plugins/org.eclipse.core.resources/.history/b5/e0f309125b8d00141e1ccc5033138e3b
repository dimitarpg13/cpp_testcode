#include <iostream>
#include <boost/polymorphic_cast.hpp>

using namespace std;

struct A { virtual ~A() {}; virtual void printMe() { cout << "A" << endl; }; };
struct B : A { void printMe() { cout << "B" << endl; }; };

int main() {
	cout << "polymorphic downcast example" << endl; // prints polymorphic downcast example

	A * inst = new B();


	B * b = boost::polymorphic_downcast<B*>(inst);



	return 0;
}
