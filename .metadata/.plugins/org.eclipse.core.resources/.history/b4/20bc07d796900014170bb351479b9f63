#include <iostream>
#include <string>
#include <typeinfo>

using namespace std;

template<typename type>
struct type_descriptor
{
	string value;
	type_descriptor()
	{

	   value = "test";
	}

	friend ostream &operator<<( ostream &output,
	                            const type_descriptor &td )
	{
	   output << td.value;
	   return output;
	}
};

template<typename type>
struct type_descriptor<int>
{
	string value;
	type_descriptor()
	{

	   value = "int";
	}

	friend ostream &operator<<( ostream &output,
	                            const type_descriptor &td )
	{
	   output << td.value;
	   return output;
	}
};


int main() {
	cout << "type descriptor exercise 2.3" << endl; // prints type descriptor exericise 2.3
	cout << type_descriptor<int>(); //<< endl;
	return 0;
}
