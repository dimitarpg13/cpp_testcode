bool RBT::add(const void* val)
{
	bool res = true;

	if (_root = nullptr)
	{
		_root = new RBTNode(val,Color::Black);
	}
	else
	{
       RBTNode * pred = find_pred(val);
       if (pred != nullptr)
       {

       }
	}

	return res;
}




RBTNode::RBTNode()
{
	value = nullptr;
	p = nullptr;
	left = nullptr;
	right = nullptr;
	color = Color::Black;
}

RBTNode::RBTNode(const void* pdata)
{
	value = pdata;
	p = nullptr;
	left = nullptr;
	right = nullptr;
	color = Color::Black;
}

RBTNode::RBTNode(const void* pdata, Color col)
{
	value = pdata;
	p = nullptr;
	left = nullptr;
	right = nullptr;
	color = col;
}

} /* namespace Algorithms */

