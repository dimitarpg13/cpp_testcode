#include <iostream>
using namespace std;


template<class... Ts> struct tuple{};

template <class T, class... Ts>
struct tuple<T, Ts...> : tuple<Ts...> {
	tuple(T t, Ts... ts) : tuple<Ts...>(ts...), tail(t) {}
	T tail;
};

int main() {
	cout << "variadic templates example" << endl; // prints variadic templates example
	return 0;
}
