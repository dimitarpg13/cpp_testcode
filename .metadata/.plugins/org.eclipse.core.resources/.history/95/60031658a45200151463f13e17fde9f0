#include <iostream>
#include <stdlib.h>
using namespace std;

// Problem4: Let T denotes a binary tree. Find the diameter of the tree
// which is the longest path between two tree leaves


char * reverse(int len, char s[])
{
    char * r = (char * ) malloc(len * sizeof(char));
    int i = len;
    r[len]='\0';
    while (i > 0)
        r[--i] = *s++;

    return r;
}

int isFunny(int len, char s[])
{

    char * r = reverse(len,s);
    for (int i=1; i<len; i++)
    {
        if (abs(r[i] - r[i-1]) != abs(s[i] - s[i-1]))
            return 0;
    }

    return 1;
}

int main() {
	cout << "HackerRank coding challenge 1" << endl;

    char s[] = "acxz";
    if (isFunny(10000,s))
    cout << isFunny(4,s) << endl;

	return 0;
}
