#ifndef INDUSTRYINFO_H_
#define INDUSTRYINFO_H_

#include <string>
#include <list>
#include "CompanyInfo.h"


using namespace std;

namespace Algorithms {





class IndustryInfo {
public:
	IndustryInfo(string name);
	virtual ~IndustryInfo();

	string getName() { return m_sName; }
    IndustryInfo* getParent() { return m_pParent; }




private:
	string m_sName;
	IndustryInfo* m_pParent;
	list<IndustryInfo*> m_setChildren;
	list<CompanyInfo*> m_setCompanies;
};



} /* namespace Algorithms */

#endif /* INDUSTRYINFO_H_ */
