#include "RBT.h"

namespace Algorithms {

RBT::RBT(int cmp(const void* p, const void* q)) {
    _cmp = cmp;
    _root = nullptr;

}

RBT::~RBT() {
	if (_root != nullptr)
	   delete _root;
}

// find the infimum node which is the node with the largest
// value from those smaller than "val"
RBTNode * RBT::find_inf(RBTNode * nd)
{
