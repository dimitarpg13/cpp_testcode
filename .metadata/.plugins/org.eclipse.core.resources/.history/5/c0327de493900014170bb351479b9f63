#include <iostream>
#include <string>
#include <typeinfo>

using namespace std;

template<typename type>
struct type_descriptor
{
	string value;
	type_descriptor()
	{
	   value = "test";
	}
    string operator() () { return value; }
};

int main() {
	cout << "type descriptor exercise 2.3" << endl; // prints type descriptor exericise 2.3
	cout << type_descriptor<int>()() << endl;
	return 0;
}
